<% layout('layouts/boilerplate') %>

    <div class="row mt-3">
        <h2 class="text-center new-font">Add CampGround</h2>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds" method="post" novalidate class="Validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title : </label>
                    <input class="form-control" type="text" id="title" name="campground[title]" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location : </label>
                    <input class="form-control" type="text" id="location" placeholder="City, State." name="campground[location]" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <div class="mb-3 custom-file">
                    <label for="image" class="form-label custom-file-label">Upload Images</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                </div>
                <!-- <div class="mb-2">
                    <label class="form-label" for="image">Image Url : </label>
                    <input class="form-control" type="text" id="image" name="campground[image]" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div> -->

                <div class="mb-3">
                    <label class="form-label" for="price">Campground price : </label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price-label">â‚¹</span>
                        <input type="text" class="form-control" placeholder="00" id="price" aria-label="" aria-describedby="price-label" name="campground[price]" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description : </label>
                    <textarea class="form-control" type="text" id="description" name="campground[description]" required></textarea>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <button class="mb-3 btn btn-success">Add Campground</button>
            </form>
        </div>
        <a href="/campgrounds" class="btn btn-outline-dark col-1 offset-8">Back</a>
    </div>
